{{!
    @template block_boasearch/main

    This template renders the template content area for a resource.

    Example context (json):
    { blockid: string }
}}

<div id="{{blockid}}" class="boa-box">
    <div data-control="errors-box" style="text-align: center;"></div>
    <input data-control="search-text" class="mr-sm-12" placeholder="{{#str}}search, block_boasearch{{/str}}" type="text" />
    <button data-control="search-button" class="btn btn-secondary my-12 my-sm-0" type="button">
        {{#str}}search, block_boasearch{{/str}}
    </button>
    <div data-control="show-one" style="text-align: center;"></div>
    <div data-control="search-result" class="col-12" style="display: none;">
        <div class="boa-content"></div>
        <button type="button" class="btn btn-primary btn-lg btn-block">{{#str}}showmore, block_boasearch{{/str}}</button>
    </div>
</div>

<!-- Templates, required in the page -->
<template id="boa-tpl-item">
    <div class="one-resource">
        <span class="thumb-box" boa-href="{about}" title="{title}" style="background-image: url({about}.img?s=128)"></span>
        <div class="panel-body">
            <label class="title" boa-href="{about}">{title}</label>
            <span class="desc mcore-text">{description}</span><br />
        </div>
        <div class="panel-foot">
            <span class="meta mcore-text">
                <!--span class="social badge badge-dark">
                    <i class="fa fa-comment"></i> {comments} {{#str}}comments, block_boasearch{{/str}}
                </span-->
                <span class="social badge badge-success score">
                    <i class="fa fa-heart"></i>{score} {{#str}}likes, block_boasearch{{/str}}
                </span>
                <span class="social badge badge-info views">
                    <i class="fa fa-eye"></i> {views} {{#str}}views, block_boasearch{{/str}}
                </span>
            </span>
        </div>
    </div>
</template>

<template id="boa-tpl-error-item">
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p>{message}</p>
        <div>{info}</div>
    </div>
</template>

