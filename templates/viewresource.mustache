{{!
    @template block_boasearch/viewresource

    This template renders the dialog to view the info about a resource.

    Example context (json):
    {}
}}

<div class="one-item">
    <div class="preview" title="{{metadata.general.title.none}}">
        {{{custom.preview}}}
    </div>
    <div class="social-box">
        <span class="social type">
            <label>{{custom.type}}</label>
        </span>
        <span class="social views">
            {{#pix}} i/hide, core, {{#str}} views, block_boasearch {{/str}} {{/pix}}
            <label>{{social.views}}</label>
        </span>
        <span class="social score">
            {{#pix}} i/star, core, {{#str}} likes, block_boasearch {{/str}} {{/pix}}
            <label>{{custom.score}}</label>
        </span>
    </div>

    <p class="description">{{metadata.general.description.none}}</p>

    <div class="keywords">
        <strong>{{#str}} keywords, block_boasearch {{/str}}:</strong>
        {{metadata.general.keywords.none}}.
    </div>

    <div class="rate">
        <strong>{{#str}} rate, block_boasearch {{/str}}</strong>
        <span class="scale">
            <span boa-act="rate" data-value="1">{{#pix}} i/star, core, {{#str}} like1, block_boasearch {{/str}} {{/pix}}</span>
            <span boa-act="rate" data-value="2">{{#pix}} i/star, core, {{#str}} like2, block_boasearch {{/str}} {{/pix}}</span>
            <span boa-act="rate" data-value="3">{{#pix}} i/star, core, {{#str}} like3, block_boasearch {{/str}} {{/pix}}</span>
            <span boa-act="rate" data-value="4">{{#pix}} i/star, core, {{#str}} like4, block_boasearch {{/str}} {{/pix}}</span>
            <span boa-act="rate" data-value="5">{{#pix}} i/star, core, {{#str}} like5, block_boasearch {{/str}} {{/pix}}</span>
        </span>
    </div>

    <div class="foot">
        {{#custom.downloadable}}
        <span>
            <a href="{{about}}/!/" target="_blank">
                {{#str}} original, block_boasearch {{/str}}
                {{#pix}} i/down, core, {{#str}} download, block_boasearch {{/str}}{{/pix}}
            </a>
        </span>
        {{/custom.downloadable}}

        {{#custom.alternates}}
        <span>
            <a href="{{url}}" target="_blank">{{text}} {{#pix}}i/down, core, {{#str}} download, block_boasearch {{/str}}{{/pix}}</a>
        </span>
        {{/custom.alternates}}

        {{#custom.socialnetworks}}
        <span>
            <a href="{{url}}" target="_blank">
                <i class="fa fa-{{icon}}"></i>
            </a>
        </span>
        {{/custom.socialnetworks}}
    </div>
</div>
